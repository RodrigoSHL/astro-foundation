---
import MainLayout from "../layouts/MainLayout.astro";

const name = "Rodrigo Catalán";
const title = "Home Page";
---

<MainLayout title={title}>
  <h1>Hola {name}</h1>
  <p>current moment: {new Date().toLocaleTimeString()}</p>
  <p id="current-time">real current moment:</p>
  <footer>Año 2023</footer>
  <script>
    const footer = document.querySelector("footer") as HTMLElement;
    const currentTimeParagraph = document.querySelector(
      "#current-time"
    ) as HTMLParagraphElement;

    const currentYear: number = new Date().getFullYear();
    const currentTime: string = new Date().toLocaleTimeString();

    footer.innerText = `Year: ${currentYear}`;

    currentTimeParagraph.innerText = `real current moment: ${currentTime}`;
  </script>
</MainLayout>
